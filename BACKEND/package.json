{
  "name": "ts-setup",
  "version": "1.0.0",
  "description": "",
  "main": "dist/src/server.js",
  "scripts": {
    "dev": "cross-env NODE_ENV=development ts-node-dev --respawn --transpile-only src/server.ts",

    "dev:prod": "cross-env NODE_ENV=production DOTENV_CONFIG_PATH=.env.prod ts-node-dev --respawn --transpile-only src/server.ts",

    "build": "rimraf dist && tsc",
    "start": "cross-env NODE_ENV=production node dist/server.js",

    "migrate:deploy:prod": "dotenv -e .env.prod -- prisma migrate deploy",
    "seed:prod":           "dotenv -e .env.prod -- ts-node --transpile-only prisma/seed.ts",

    "dev:prod:full": "npm run migrate:deploy:prod && npm run seed:prod && npm run dev:prod",

    "studio:prod":  "dotenv -e .env.prod -- prisma studio",
    "studio:dev":   "prisma studio"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/body-parser": "^1.19.5",
    "@types/cookie-parser": "^1.4.8",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/multer": "^1.4.12",
    "@types/node": "^20.17.30",
    "@types/nodemailer": "^6.4.17",
    "@types/pdfkit": "^0.13.9",
    "concurrently": "^8.2.0",
    "cross-env": "^7.0.3",
    "dotenv-cli": "^8.0.0",
    "nodemon": "^3.1.10",
    "prisma": "^6.5.0",
    "rimraf": "^6.0.1",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.1.6"
  },
  "dependencies": {
    "@prisma/client": "^6.5.0",
    "bcrypt": "^5.1.1",
    "body-parser": "^1.20.2",
    "cloudinary": "^1.41.3",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^16.5.0",
    "express": "^4.18.2",
    "google-auth-library": "^9.15.1",
    "jsonwebtoken": "^9.0.2",
    "multer": "^1.4.5-lts.2",
    "multer-storage-cloudinary": "^4.0.0",
    "nodemailer": "^6.10.1",
    "pdfkit": "^0.17.0",
    "sequelize": "^6.35.1",
    "stripe": "^18.0.0"
  },
  "prisma": {
    "seed": "ts-node ./prisma/seed.ts"
  }
}
